<UserControl x:Class="WPF_Test_Answers.UserControls.Button_UserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Test_Answers.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="120">
    <Grid x:Name="UC_Grid" MouseEnter="UC_Grid_MouseEnter" MouseLeave="UC_Grid_MouseLeave" MouseLeftButtonDown="UC_Grid_MouseLeftButtonDown" MouseLeftButtonUp="UC_Grid_MouseLeftButtonUp">
        <Rectangle x:Name="UC_Rectangle" HorizontalAlignment="Center" Height="30" Stroke="#FF707070" VerticalAlignment="Top" Width="120" 
                   Fill="#FFDDDDDD" />
        <TextBlock x:Name="UC_Text" HorizontalAlignment="Center" Text="User Control Button" 
                   VerticalAlignment="Center" TextAlignment="Center" FontFamily="Segoe UI" FontSize="12"/>
    </Grid>
</UserControl>
